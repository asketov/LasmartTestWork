<div id ="container"></div>
 
@section Scripts
{
    <script src='@Url.Content("js/scripts/pointsManager.js")' asp-append-version="true"></script>
    <script>
        $(document).ready(() => {
        var pointsManager = new PointsManager();
        pointsManager.loadPoints().done(() => pointsManager.display());
        $("#container").dblclick(event => {
            let point = pointsManager.findPoint(event.clientX, event.clientY);
            if (point != undefined) pointsManager.deletePoint(point).done(() => pointsManager.display());
        })
})
    </script>
}
